<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".itemlistdetailta"
    android:layout_marginTop="5dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D9D9">

        <Button
            android:id="@+id/btnpembatalanta"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:backgroundTint="#E50000"
            android:text="Pembatalan TA"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/btndetsidang"
            app:layout_constraintStart_toStartOf="@+id/btnlistlogbook"
            app:layout_constraintTop_toBottomOf="@+id/btndetseminar"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnlistlogbook"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#81AA66"
            android:text="Logbook"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@+id/detaita"
            app:layout_constraintTop_toBottomOf="@+id/detaita"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btndetseminar"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:backgroundTint="#CDAE0D"
            android:text="Seminar"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:layout_constraintEnd_toStartOf="@+id/btndetsidang"
            app:layout_constraintStart_toEndOf="@+id/btnlistlogbook"
            app:layout_constraintTop_toTopOf="@+id/btnlistlogbook"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btndetsidang"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:backgroundTint="#6675AA"
            android:text="Sidang"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/detaita"
            app:layout_constraintTop_toTopOf="@+id/btndetseminar"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/simbol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/simbol2"
            app:layout_constraintTop_toTopOf="@+id/judulta" />

        <TextView
            android:id="@+id/simbol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/simbol1"
            app:layout_constraintTop_toTopOf="@+id/nim" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Nama"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nim "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/nama"
            app:layout_constraintTop_toBottomOf="@+id/nama" />

        <TextView
            android:id="@+id/judulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Judul TA"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/nim"
            app:layout_constraintTop_toBottomOf="@+id/nim" />

        <TextView
            android:id="@+id/simbol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text=":"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/nama"
            app:layout_constraintTop_toTopOf="@+id/nama" />

        <TextView
            android:id="@+id/namamahasiswa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Udin"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/simbol1"
            app:layout_constraintTop_toTopOf="@+id/simbol1" />

        <TextView
            android:id="@+id/nimmahasiwa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="19123456"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/simbol2"
            app:layout_constraintTop_toTopOf="@+id/simbol2" />

        <TextView
            android:id="@+id/judultamahasiswa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Inovasi SI"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/simbol3"
            app:layout_constraintTop_toTopOf="@+id/judulta" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nama"
            app:srcCompat="@drawable/icnprofil" />

        <TextView
            android:id="@+id/textnilaita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Nilai TA"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/nilaita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="2"
            android:inputType="number"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textnilaita"
            app:layout_constraintStart_toStartOf="@+id/textnilaita"
            app:layout_constraintTop_toBottomOf="@+id/textnilaita"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Grade"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/nilaita"
            app:layout_constraintStart_toStartOf="@+id/nilaita"
            app:layout_constraintTop_toBottomOf="@+id/nilaita" />

        <EditText
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="2"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textgrade"
            app:layout_constraintStart_toStartOf="@+id/textgrade"
            app:layout_constraintTop_toBottomOf="@+id/textgrade"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textdetailta"
            android:layout_width="59dp"
            android:layout_height="22dp"
            android:shadowColor="@color/black"
            android:text="Detai TA"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/judulta"
            app:layout_constraintTop_toTopOf="@+id/textnilaita" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="100dp"
            android:background="@color/black"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detaita"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:text="Sistem Informasi Riset Inovasi Pemerintah dan Masyarakat Kabupaten Sragen (SI-RISMA) merupakan sebuah aplikasi untuk menyajikan segala informasi tentang inovasi-inovasi yang ada di Kabupaten Sragen. "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textdetailta"
            app:layout_constraintTop_toBottomOf="@+id/textdetailta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>