<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.itemlistmahasiswa"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#D9D9D9">

        <TextView
            android:id="@+id/simbol21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/simbol11"
            app:layout_constraintTop_toTopOf="@+id/nim" />

        <TextView
            android:id="@+id/nama1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Nama"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nim "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/nama1"
            app:layout_constraintTop_toBottomOf="@+id/nama1" />

        <TextView
            android:id="@+id/simbol11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text=":"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/nama1"
            app:layout_constraintTop_toTopOf="@+id/nama1" />

        <TextView
            android:id="@+id/namadetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Udin"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/simbol11"
            app:layout_constraintTop_toTopOf="@+id/simbol11" />

        <TextView
            android:id="@+id/nimmdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="19123456"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/simbol21"
            app:layout_constraintTop_toTopOf="@+id/simbol21" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="68dp"
            android:layout_height="83dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nama1"
            app:srcCompat="@drawable/profilmhs" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Angkatan "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/nim"
            app:layout_constraintTop_toBottomOf="@+id/nim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=": "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/simbol21"
            app:layout_constraintTop_toBottomOf="@+id/simbol21" />

        <TextView
            android:id="@+id/angkatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2020 "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/nimmdetail"
            app:layout_constraintTop_toBottomOf="@+id/nimmdetail" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>